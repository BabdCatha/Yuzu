<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <Button
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/button_deleteplayer"
        android:textStyle="bold"
        android:text="-"
        android:textSize="20dp"
        android:id="@+id/row_button"/>
    <EditText
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_toRightOf="@id/row_button"
        android:id="@+id/row_edittext"
        android:saveEnabled="false"
        android:maxLines="1"
        android:inputType="text"
        android:fontFamily="@font/montserrat_regular"
        app:backgroundTint="@color/EditTextColor"
        android:hint="@string/NomDuJoueur"/>

</RelativeLayout>