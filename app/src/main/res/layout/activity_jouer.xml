<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="@drawable/background_3"
    tools:context="net.sokato.game.yuzu.Jouer">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true"
        android:layout_marginBottom="88dp"
        android:id="@+id/scrollPlay">
    <RelativeLayout
        android:id="@+id/JouerLayout"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:paddingBottom="88dp">
        <TextView
            android:id="@+id/LastPhraseView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:textAlignment="center"/>
        <EditText
            android:fontFamily="@font/montserrat_regular"
            android:id="@+id/FirstEditText"
            app:backgroundTint="@color/EditTextColor"
            android:layout_below="@id/LastPhraseView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/JouerHint" />
    </RelativeLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/NextPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:backgroundTint="@color/FABbackground"
        android:layout_margin="@dimen/fab_margin"
        android:tint="@color/EditTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_arrow_right_bold" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/AddText"
        app:backgroundTint="@color/FABbackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:tint="@color/EditTextColor"
        app:srcCompat="@android:drawable/ic_input_add" />
    <Button
        android:id="@+id/Terminer"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:layout_marginEnd="88dp"
        android:layout_marginStart="16dp"
        android:textSize="22sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/button_addplayers"
        android:text="@string/Terminer"/>

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/transparentBlack"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
